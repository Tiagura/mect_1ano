void run(){
	char oper;
	controlSite.startOfOperation
	while( (oper=controlSite.appraiseSit()) != 'E'){
		switch(oper):{
			case 'P':
				controlSite.prepareAssaultParty(controlSite.getAssultID(), controlSite.getRoomID()); (master -> bloqueia no site ou bloq no grupo de assalto especifico)
				(esta ops vai ter uma sub-op onde a master bloqueia o grupo de assalto)
				assGroup(controlSite.getAssaultID()).sendAssaultParty()
				break;
				
			case 'R':
				controlSite.takeARest();
				(acordado com um theif que fornece tela)
				controlSite.collectACanvas(); (no args?)
				break;
				
		}
		
		controlSite.sumUpResults(?.getNOfCanvas());
				
	}

}

